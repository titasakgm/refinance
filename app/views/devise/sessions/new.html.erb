<%= devise_error_messages! %>

<div class="row buffer-top">
  <div class="col-md-offset-3 col-md-6">
    <div class="panel panel-info">
      <div class="panel-heading center">เข้าสู่แบบประเมินความสามารถในการชำระหนี้</div>
      <div class="panel-body">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <div class="form-group">
            <%= f.input :email, as: :string, required: true, autofocus: true, :label => "Username", :novalidate => "novalidate" %>
          </div>

          <div class="form-group">
            <%= f.input :password, required: true, :label => "รหัสผ่าน" %>
          </div>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "เข้าสู่ระบบ", :class => "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
