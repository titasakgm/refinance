# encoding: UTF-8
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
  <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
  <title>Survey: <%= controller.action_name %></title>
  <%= surveyor_includes %>

  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>

  <meta name="viewport" content="width=device-width">
</head>
<body>

<% if current_user %>
  <header id="menu" class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="navbar-inner navbar-custom">
      <a href="#">
        <img style="position: absolute; top: -60; right: 0;
        border: 0;" src="/assets/refin-logo.png" height="70"/>
      </a>
      <div class="container">
        <ul class="nav navbar-nav">
          <% if user_signed_in? %>
            <%= @user %>
            <div class="btn-group lh-35">
              <button type="button" class="btn btn-primary dropdown-toggle"
              data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Report
              </button>
              <div class="dropdown-menu">

                <li><%= link_to "Overview",
                  '#',
                  {:class => "dropdown-item", :target => '_blank'} %></li>

                <li role="separator" class="divider"></li>

                <li><%= link_to "By Sex", '#',
                  {:target => '_blank'} %></li>
                <li><%= link_to "By Department", '#',
                  {:target => '_blank'} %></li>
                <li><%= link_to "By Bureau/Division", '#',
                  {:target => '_blank'} %></li>
                <li><%= link_to "By Region", '#',
                  {:target => '_blank'} %></li>
                <li><%= link_to "By Province", '#',
                  {:target => '_blank'} %></li>
                <li><%= link_to "By Office Type", '#',
                  {:target => '_blank'} %></li>
                <li><%= link_to "By Hospital", '#',
                  {:target => '_blank'} %></li>
                <li><%= link_to "My Office", '#',
                  {:target => '_blank'} %></li>
              </div>
            </div>

            <% if current_user.email =~ /^admin@/ %>
            <div class="btn-group lh-35">
              <button type="button" class="btn btn-success dropdown-toggle"
              data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Progress
              </button>
              <div class="dropdown-menu">
               <li><%= link_to "By Region", '#',
                  {:target => '_blank'} %></li>
                <li><%= link_to "By Department", '#',
                  {:target => '_blank'} %></li>
                <li><%= link_to "By My Offices", '#',
                  {:target => '_blank'} %></li>
              </div>
            </div>
            <% end %>

            <div class="btn-group lh-35">
              <button type="button" class="btn btn-info dropdown-toggle"
              data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Export
              </button>
              <div class="dropdown-menu">
                <li><%= link_to "Excel (CSV)", '#', target: "_blank" %></li>
              </div>
            </div>

            <%= link_to "Logout", "/users/logout",
              {:class => "btn btn-warning", :style => "margin-top:19px;"} %>

            <div class="show-email">
              <% user = fullname %>
              <% if current_user.email =~ /^admin/ %>
                <%= link_to user, '#',
                  {:class => "btn btn-danger btn-sm"} %>
              <% else %>
                <%= link_to user, {:controller => :surveyor, :action => :edit},
                {:class => "btn btn-success btn-sm"} %>
              <% end %>
            </div>

          <% else %>

            <li><%= link_to "Register", new_user_registration_path, {:method => :get,
              :class => "btn btn-primary fx", :style => "margin-top:9px;margin-right:10px;"} %>
            </li>
            <li><%= link_to "Sign in", new_user_session_path, {:method => :get,
              :class => "btn btn-primary fx", :style => "margin-top:9px;margin-right:10px;"} %>
            </li>

          <% end %>
        </ul>
      </div>
    </div>
  </header>
<% end %>

<div class="container">
  <%= yield %>
</div>

<script>
  var sex,age,sect,resp,prov;

  function hide_flash() {
    $('.surveyor_flash').hide();
  }

  $(".alert" ).fadeOut(5000);
  $(".notice" ).fadeOut(5000);
  setTimeout(hide_flash, 5000);

  $(function() {
    var href = window.document.location.href;

    if (href.match('uinfo=')) {
      u = decodeURIComponent(href).split('=')[1].split(',');

      sex = u[0];
      age = u[1];
      sect = u[2];
      resp = u[3];
      prov = u[4];
    }

    // set values of survey form
    $('#r_1_string_value').val(sect);
    $('#r_2_string_value').val(resp);
    provx = $("#r_3_answer_id option:contains('" + prov + "')").val();
    $('#r_3_answer_id').val(provx);
    if (sex == '1') {
      $('#r_1_answer_id_80').attr('checked',true);
    } else if (sex == '2') {
      $('#r_1_answer_id_81').attr('checked',true);
    } else {
      $('#r_1_answer_id_82').attr('checked',true);
    }
    $('#r_2_integer_value').val(age);
  });

</script>

</body>
</html>
